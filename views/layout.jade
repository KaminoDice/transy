doctype html
html
  block vars
  head
    title #{title}
    //- meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="/css/modern.css", rel="stylesheet")
    //- link(href="/css/modern-responsive.css", rel='stylesheet')
    link(href='/css/component.css', rel='stylesheet')
    link(href='/css/page.css', rel='stylesheet')
    script(src='/js/lib/jquery.min.js')
    script(src='/js/lib/buttonset.js')
    script(src='/js/lib/dropdown.js')

  body.metrouicss(id='#{page}')
    div.page.content
      // nav
      div.nav-bar
        div.nav-bar-inner.padding10       
          a(href="/")
            span.element.brand
              | Transy&nbsp;
              small 翻译助手

          ul.menu.place-right
            if locals.cookies.user
              li
                a(href='/article/add') 新文章
              li(data-role="dropdown")
                a(href='#') #{locals.cookies.user.name}
                ul.dropdown-menu
                  li
                    a(href="/u/setting") 设置
                  li
                    a(href="/signout") 登出
            else
              li
                a(href="/signup") 注册
              li
                a(href='/signin') 登陆

      // content
      div.grid
        block content

    div.footer
      div.copyright
        | Transy 2013 © by&nbsp;
        a(href="http://hustlzp.com", target='_blank') hustlzp 

      div.links
        a(href='/about') About
        a(href='https://github.com/hustlzp/transy', target='_blank') GitHub